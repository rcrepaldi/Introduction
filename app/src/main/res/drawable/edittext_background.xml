<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">

                    <solid android:color="@android:color/transparent" />

                    <stroke android:width="1dp" android:color="@color/colorInterfaceElementActive" />

                    <padding android:bottom="5dp" android:left="0dp" android:right="0dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape android:shape="rectangle">

                    <solid android:color="@android:color/transparent" />

                    <stroke android:width="1dp" android:color="@color/colorAccentMainComplementary" />

                    <padding android:bottom="5dp" android:left="0dp" android:right="0dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>